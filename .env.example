# Production Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secure-secret-key-here-change-this

# Database Configuration (SQLite for simple deployment, or use PostgreSQL/MySQL)
DATABASE_URL=sqlite:///production.db

# File Storage
UPLOAD_FOLDER=/app/uploads
TYPING_PASSAGES_FOLDER=/app/typing_passages
MAX_CONTENT_LENGTH=52428800

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PHONE=+1234567890
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Optional: Cloud Storage (if using AWS S3)
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Optional: Redis for Session Storage (for scaling)
# REDIS_URL=redis://localhost:6379/0
